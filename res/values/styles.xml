<resources>
    <!-- Action bar -->
    <style name="ActionBar.Base" parent="android:Widget.Holo.ActionBar">
        <item name="android:background">@color/transparent</item>
        <item name="android:icon">@drawable/ic_launcher</item>
        <item name="android:displayOptions">showHome|showTitle</item>
        <item name="android:titleTextStyle">@style/ActionBar.TitleText</item>
    </style>

    <style name="ActionBar" parent="ActionBar.Base" />

    <style name="ActionBar.TitleText" parent="android:TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/actionbar_text</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <!-- Empty views -->
    <style name="EmptyText">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">@color/body_text_disabled</item>
    </style>

    <!-- Body content -->
    <style name="Text">
        <item name="android:textColor">@color/body_text_1_inverse</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textIsSelectable">true</item>
    </style>

    <style name="TextHeader">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">@color/body_text_1_inverse</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textIsSelectable">true</item>
    </style>

    <style name="TextHeader.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextHeaderSub">
        <item name="android:textSize">@dimen/text_size_ssmall</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/body_text_1_inverse</item>
    </style>
    <style name="TextBody">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">@color/body_text_1_inverse</item>
        <item name="android:lineSpacingMultiplier">1.1</item>
    </style>
    <style name="TextBody.Large">
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textColor">@color/body_text_1_inverse</item>
        <item name="android:lineSpacingMultiplier">1.1</item>
    </style>

    <style name="Checkbox">
        <item name="android:layout_marginTop">1dp</item>
        <item name="android:layout_marginBottom">3dp</item>
        <item name="android:textColor">@android:color/white</item>

        <item name="android:background">@drawable/checkbox_corners</item>
    </style>

    <!-- Login -->
    <style name="Login">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/body_text_1_inverse</item>
    </style>

    <style name="Login.Frame">
        <item name="android:layout_width">@dimen/login_sign_width</item>
        <item name="android:layout_height">@dimen/login_sign_height</item>

    </style>
    <style name="Login.EditText">
        <item name="android:layout_margin">5dp</item>
    </style>
    <style name="Login.Warning">
        <item name="android:color">#fc4c33</item>
    </style>
    <style name="LoginButton">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>
    <style name="LoginButton.Border">
        <item name="android:background">@drawable/button_corners</item>
    </style>

    <style name="LoginButton.NoBorder">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:background">@color/transparent</item>
    </style>

    <style name="SelectInterest">
        <item name="android:layout_marginTop">@dimen/select_interest_layout_margin_top</item>
        <item name="android:layout_marginBottom">@dimen/select_interest_layout_margin_bottom</item>
        <item name="android:layout_marginLeft">@dimen/select_interest_layout_margin_left</item>
        <item name="android:layout_marginRight">@dimen/select_interest_layout_margin_right</item>
    </style>

    <!-- DialogFragment -->
    <style name="DialogFragment">
        <item name="android:layout_width">400dp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    <style name="DialogFragment.Header">
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>
    <style name="DialogFragment.Body">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginBottom">20dp</item>
    </style>
    <style name="DialogFragment.Input">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorHighlight">@android:color/white</item>
    </style>
    <style name="DialogFragment.Button">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>
    <style name="DialogFragment.Button.Ok">
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:background">@drawable/button_corners</item>
    </style>

    <!-- MenuFragment -->
    <style name="MenuFragment">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/text_size_ssmall</item>
    </style>
    <style name="MenuFragment.Head">
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingLeft">30dp</item>
        <item name="android:paddingRight">10dp</item>
    </style>
    <style name="MenuFragment.Avatar">
        <item name="android:layout_margin">10dp</item>
    </style>
    <style name="MenuFragment.Control">
        <item name="android:background">@color/menu_control_color_background</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingTop">5dp</item>
    </style>
    <style name="MenuFragment.Control.Head">
    </style>
    <style name="MenuFragment.Item">
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingTop">5dp</item>
    </style>
    <style name="MenuFragment.Item.Head">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">#00a395</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:paddingBottom">1dp</item>
        <item name="android:paddingTop">1dp</item>
    </style>
    <style name="MenuFragment.Item.Body">
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:paddingBottom">1dp</item>
        <item name="android:paddingTop">1dp</item>
    </style>

    <!-- info bar -->
    <style name="InfoBarNumber">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_size_xlarge</item>
    </style>
    <style name="InfoBarName">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">center|left</item>
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>
    <style name="InfoBarBody">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <!-- slide bar -->
    <style name="SlideBarIco">
        <item name="android:layout_marginBottom">16dp</item>
    </style>

    <!-- setting -->
    <style name="setting_title">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:layout_marginBottom">@dimen/setting_layout_marginBottom</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">76dp</item>
        <item name="android:paddingTop">@dimen/setting_paddingTop</item>
        <item name="android:paddingBottom">@dimen/setting_paddingBottom</item>
    </style>

    <!-- Controller -->
    <style name="ControllerText">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <!-- tab -->
    <style name="tab_1">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/text_size_xlarge</item>
    </style>

    <!-- Channle Result item -->
    <style name="ChannelResult">
        <item name="android:textColor">@android:color/white</item>
    </style>
    <style name="ChannelResult.Cover">
      <item name="android:layout_width">@dimen/channel_cover_width</item>
      <item name="android:layout_height">@dimen/channel_cover_height</item>
    </style>
    <style name="ChannelResult.Title">
        <item name="android:textSize">@dimen/text_size_xlarge</item>
        <item name="android:layout_marginTop">@dimen/channel_title_margin_top</item>
        <item name="android:layout_marginBottom">@dimen/channel_title_margin_bottom</item>
    </style>
    <style name="ChannelResult.Type">
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>
    <style name="ChannelResult.Count">
        <item name="android:textSize">@dimen/text_size_xlarge</item>
    </style>

</resources>
