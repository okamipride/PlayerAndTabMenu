<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
	<item android:state_enabled="true">
		<shape android:shape="oval">

			<solid android:color="@color/viewpager_dot_enable"/>

			<size android:width="@dimen/viewpager_dot"
				android:height="@dimen/viewpager_dot"/>

		</shape>
	</item>
	<item android:state_enabled="false">
		<shape android:shape="oval">

			<solid android:color="@color/viewpager_dot_disable"/>

			<size android:width="@dimen/viewpager_dot"
				android:height="@dimen/viewpager_dot"/>

		</shape>
	</item>
</selector>